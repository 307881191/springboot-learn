<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lnjecit.generator.dao.GeneratorDao">

    <resultMap id="tableEntityMap" type="com.lnjecit.generator.entity.TableEntity">
        <result column="table_schema" property="tableSchema"/>
        <result column="table_name" property="tableName"/>
        <result column="engine" property="engine"/>
        <result column="table_comment" property="tableComment"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
		table_schema,table_name,engine,table_comment,create_time
	</sql>

    <select id="getTableList" resultMap="tableEntityMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        information_schema.tables
        WHERE
        table_schema = (SELECT DATABASE())
        <if test="tableName != null and tableName.trim() != ''">
            and table_name like concat('%', #{tableName}, '%')
        </if>
        ORDER BY
        create_time DESC
    </select>

    <select id="getTableByName" resultMap="tableEntityMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        information_schema.tables
        WHERE
        table_schema = (SELECT DATABASE())
        AND table_name = #{tableName}
    </select>

</mapper>